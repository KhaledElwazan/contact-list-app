<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_500"
        tools:context=".ContactDetailsActivity">


    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
          android:background="@color/purple_500"/>

    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <View android:layout_width="match_parent" android:layout_height="70dp"
                  android:background="@drawable/curved_rectangle"
                  android:layout_gravity="center" android:backgroundTint="@color/purple_500"/>

            <View android:layout_width="match_parent" android:layout_height="80dp"
                  android:background="@drawable/curved_rectangle"
                  android:layout_gravity="center" android:backgroundTint="@color/white"/>

        </LinearLayout>


        <FrameLayout android:layout_width="match_parent" android:layout_height="130dp">

            <View android:layout_width="130dp" android:layout_height="130dp"
                  android:background="@drawable/circular_halo" android:layout_gravity="center"/>


            <ImageView android:layout_width="match_parent" android:layout_height="120dp"
                       android:id="@+id/contact_image"
                       android:layout_margin="10dp"
                       android:layout_gravity="center"/>

        </FrameLayout>


    </FrameLayout>

    <GridLayout android:rowCount="7" android:columnCount="3" android:layout_width="match_parent"
                android:background="@color/white"
                android:padding="15dp"
                android:layout_height="0dp" android:layout_weight="3">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/dummy_contact_name"
                  android:layout_gravity="center"
                  android:layout_margin="15dp"
                  android:id="@+id/contact_name"
                  android:textSize="30sp" android:textColor="@color/black" android:layout_columnSpan="3"/>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_columnWeight="1"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/dummy_contact_phone"
                      android:id="@+id/contact_phone"
                      android:textSize="20sp" android:textColor="@color/black"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/mobile"
                      android:textSize="15sp" android:textColor="@color/grey"/>

        </LinearLayout>


        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_call_24"
                android:backgroundTint="@color/white"
        />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_message_24"
                android:backgroundTint="@color/white"
        />

        <View android:layout_width="match_parent" android:layout_height="5dp"
              android:background="@drawable/grey_line"
              android:layout_columnSpan="3"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/whatsapp"
                  android:textSize="20sp" android:textColor="@color/black" android:layout_columnWeight="1"/>

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_call_24"
                android:backgroundTint="@color/white"
        />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_message_24"
                android:backgroundTint="@color/white"
        />

        <View android:layout_width="match_parent" android:layout_height="5dp"
              android:background="@drawable/grey_line"
              android:layout_columnSpan="3"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/email"
                  android:layout_columnSpan="2"
                  android:textSize="20sp" android:textColor="@color/black" android:layout_columnWeight="1"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_email_24"
                android:backgroundTint="@color/white"
        />

    </GridLayout>


</LinearLayout>